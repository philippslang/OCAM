{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/sport-video-annotation/v0/schema.json",
  "title": "Sport Video Annotation v0",
  "type": "object",
  "required": ["type", "id", "role", "target", "aspect", "body"],
  "properties": {
    "type": {
      "const": "Annotation"
    },

    "id": {
      "type": "string",
      "description": "Unique identifier for the annotation"
    },

    "role": {
      "type": "string",
      "enum": ["observation", "suggestion"],
      "description": "Coaching role of the annotation"
    },

    "target": {
      "type": "object",
      "required": ["source", "selector"],
      "properties": {
        "source": {
          "type": "string",
          "description": "URI or identifier of the video resource"
        },
        "selector": {
          "type": "object",
          "required": ["type", "value"],
          "properties": {
            "type": {
              "const": "FragmentSelector"
            },
            "value": {
              "type": "string",
              "description": "Media Fragment temporal selector (e.g. t=12.40 or t=12.40,13.10)"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },

    "aspect": {
      "type": "object",
      "required": ["domain"],
      "properties": {
        "domain": {
          "type": "string",
          "enum": [
            "technique",
            "tactics",
            "physical",
            "mental",
            "rules",
            "other"
          ],
          "description": "High-level performance domain of the annotation"
        }
      },
      "additionalProperties": false
    },

    "body": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Free-form textual description of the annotation"
        },
        "svgSegments": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "SVG element fragment (e.g. <line>, <path>)"
          },
          "description": "List of SVG segments representing visual annotation content"
        }
      },
      "additionalProperties": false,
      "anyOf": [
        { "required": ["description"] },
        { "required": ["svgSegments"] }
      ]
    }
  },
  "additionalProperties": false
}
